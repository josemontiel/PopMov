<resources>

    <!-- Base application theme. -->
    <style name="Theme.PopMov" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="colorSwitchThumbNormal">@color/divider</item>
    </style>

    <style name="Theme.PopMov.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="colorSwitchThumbNormal">@color/divider</item>
    </style>

    <style name="PopMov.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

</resources>
